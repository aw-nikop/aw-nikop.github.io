---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": ["Organization", "LocalBusiness", "ProfessionalService"],
      "@id": "https://altoncomputersolutions.com/#org",
      name: "Alton Computer Solutions",
      url: "https://altoncomputersolutions.com/",
      logo: {
        "@type": "ImageObject",
        url: "https://altoncomputersolutions.com/favicon.ico",
      },
      image: "https://altoncomputersolutions.com/cropped-logo-black.webp",
      description:
        "Managed IT support and cybersecurity for small businesses in Seattle.",
      telephone: "206-782-4035",
      address: {
        "@type": "PostalAddress",
        streetAddress: "4209 21st Ave W #200",
        addressLocality: "Seattle",
        addressRegion: "WA",
        postalCode: "98199",
        addressCountry: "US",
      },
      areaServed: {
        "@type": "City",
        name: "Seattle",
      },
      sameAs: [
        "https://www.linkedin.com/company/alton-computer-solutions/",
        "https://www.facebook.com/AltonNetworking",
      ],
      contactPoint: [
        {
          "@type": "ContactPoint",
          telephone: "206-782-4035",
          contactType: "customer support",
          areaServed: "US",
          availableLanguage: ["en"],
        },
      ],
    },
    {
      "@type": "WebSite",
      "@id": "https://altoncomputersolutions.com/#website",
      url: "https://altoncomputersolutions.com/",
      name: "Alton Computer Solutions",
      publisher: { "@id": "https://altoncomputersolutions.com/#org" },
      inLanguage: "en-US",
    },
  ],
};
const articles = await getCollection("articles");
const recentPosts = articles
  .sort((a, b) =>           
    {return (
      new Date(b.data.updatedDate || b.data.publishDate) -
      new Date(a.data.updatedDate || a.data.publishDate)
    )})
  .slice(0, 3);
