                                  <span class="subtext">
                    {post.data.author + " | " + new Date(
                      post.data.updatedDate || post.data.publishDate
                    ).toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </span>
                <p class="card-text">
                  {post.data.description.length > 199
                    ? post.data.description.slice(0, 199) + "..."
                    : post.data.description}
